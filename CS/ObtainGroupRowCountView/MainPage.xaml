<UserControl x:Class="ObtainGroupRowCountView.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>
        <dxg:GridControl Name="grid" AutoPopulateColumns="True"/>
        <Button Grid.Row="1" Content="Show Visible Group Row Count"
                Click="Button_Click"/>
    </Grid>
</UserControl>
